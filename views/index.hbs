<div class="container mt-5">
  <a href="/">URL Shortener</a>
  <img src="" alt="url-shortener">
  <form action="/shorten" method="POST">
    <div class="form-group">
      <input type="url" class="form-control" id="inputURL" name="inputURL" placeholder="Input URL here">
    </div>
    <button type="submit" class="btn btn-outline-primary">shorten</button>
  </form>
  {{#if shortURL}}
  <div>
    <h1>URL Shortener</h1>
    <h2 for="shortURL"> Success! Please use this link:</h2>
    <a name="shortURL" href="">this is your shortened url</a>
    <button type="submit" class="btn btn-primary">Copy</button>
  </div>
  {{/if}}
</div>